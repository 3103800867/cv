# 两层全连接神经网络环境配置示例
# 复制此文件为 tlnn.env 并修改相应配置

# 数据路径配置
MNIST_CACHE_DIR=./mnist_cache
DATA_PATH=./data

# 训练超参数配置
INPUT_SIZE=784
HIDDEN_SIZE=128
OUTPUT_SIZE=10
LEARNING_RATE=0.5
EPOCHS=100
BATCH_SIZE=128

# 模型保存配置
MODEL_SAVE_PATH=./models
MODEL_NAME=two_layer_mlp_mnist

# 可视化配置
PLOT_LOSS=True
SHOW_PREDICTIONS=True
NUM_PREDICTION_IMAGES=15

# 随机种子（用于可重复性）
RANDOM_SEED=42